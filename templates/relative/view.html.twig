{% extends 'base.html.twig' %}

{% block body %}

<div class="d-flex flex-row justify-content-between">
    <h2>{{ relative.firstname }} {{ relative.lastname }}</h2>
    <div>
        <a href="{{ path('relative_update', {'id': relative.id}) }}" class="btn btn-primary">Modifier</a>
    </div>
</div>

{% if relative.home is not null %}
<p>&#127968; Habite a {{ relative.getHome().cityName }}, {{ relative.getHome().postCode }}</p>

<div class="d-flex flex-row justify-content-left">
    {% if relative.getHome().getRelatives()|length() > 1 %}
        <p class="mr-2">Avec 
            {% for homeRelative in relative.getHome().getRelatives() %}
                {% if not loop.first %}
                et
                {% endif %}
                {# TODO {% if homeRelative is not same as relative %} #}
                    {{ homeRelative.firstname }}
                {# {% endif %} #}
            {% endfor %}
        </p>
    {% endif %}
    <p>(foyer "{{ relative.getHome().name }}")
    {% endif %}</p>
</div>

{% if relative.birthdate is not null %}
<p>&#128197; Date de naissance : {{ relative.birthdate|date("d\\/m\\/Y") }}</p>
<p>&#8986; Ã‚ge : {{ relative.age }} ans</p>
{% endif %}


{% endblock %}
