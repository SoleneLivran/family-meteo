{% extends 'base.html.twig' %}

{% block body %}
<h2>Ajouter un proche à la liste </h2>

	{{ form_start(relativeForm) }}
	    {{ form_row(relativeForm.firstname) }}
	    {{ form_row(relativeForm.lastname) }}
	    {{ form_row(relativeForm.birthdate) }}
	    <div class="d-flex flex-row justify-content-between">
	    	{{ form_label(relativeForm.home) }}
			<div>
				<a href="{{ path('home_add') }}" class="btn btn-primary p-1 mb-2">Créer un nouveau foyer</a>
			</div>
	    </div>
	    {{ form_widget(relativeForm.home) }}
	    <input type="submit" value="Valider" class="btn btn-primary mt-3 mr-2">
		<a href="{{ path('relative_list') }}" class="btn btn-warning mt-3">Retour à la liste</a>
	{{ form_end(relativeForm) }}

{% endblock %}
