{% extends 'base.html.twig' %}

{% block body %}

<div class="d-flex flex-row justify-content-between">
    <h2>Modifier les informations de {{ relative.firstname }} </h2>

    <div>
        <a onClick="return confirm('Confirmez la suppression');" href="{{ path('relative_delete', {'id': relative.id}) }}" class="btn btn-danger">Supprimer</a>
    </div>
</div>

	{{ form_start(relativeForm) }}
	    {{ form_row(relativeForm.firstname) }}
	    {{ form_row(relativeForm.lastname) }}
	    {{ form_row(relativeForm.birthdate) }}
	    <div class="d-flex flex-row justify-content-between">
	    	{{ form_label(relativeForm.home) }}
			<div>
				<a href="{{ path('home_add') }}" class="btn btn-primary p-1 mb-2">Ajouter</a>
			</div>
	    </div>
	    {{ form_widget(relativeForm.home) }}
	    <input type="submit" value="Valider" class="btn btn-primary mt-3 mr-2">
		<a href="{{ path('relative_view', {'id' : relative.id})}}" class="btn btn-warning mt-3">Annuler les modifications</a>
	{{ form_end(relativeForm) }}

{% endblock %}
