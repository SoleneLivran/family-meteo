{% extends 'base.html.twig' %}

{% block body %}


{% if homes is not empty %}
<div class="d-flex flex-row justify-content-between">
    <h2>Liste des foyers</h2>
    <div>
        <a href="{{ path('home_add') }}" class="btn btn-primary">Ajouter</a>
    </div>
</div>

<ul class="list-group">
{% for home in homes %}
        <li class="list-group-item list-group-item-action">
            <a href="{{ path('home_view', {id: home.id}) }}">
            Foyer {{ home.name|capitalize }}
            </a>
            {% if home.getRelatives() is not empty %}
                (
                {% for relative in home.getRelatives() %}
                    {% if not loop.first %}
                    & 
                    {% endif %}
                    {{ relative.firstname|capitalize }}
                {% endfor %}
                )
            {% endif %}
        </li>
{% endfor %}
</ul>

{% else %}
<h2>Liste des foyers</h2>
<p>Aucun foyer créé pour le moment !</p>
<a href="{{ path('home_add') }}" class="btn btn-primary">Ajouter des foyers</a>
{% endif %}

{% endblock %}
